{
  "name": "v-md",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:script": "eslint . --fix",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue}",
    "tsc:libs": "pnpm -F @v-md/app -F @v-md/plugin-editor-volar -F @v-md/plugin-lang-sass tsc",
    "dev:play": "pnpm -F @v-md/playground run dev",
    "dev:doc": "pnpm -F @v-md/doc run dev",
    "build-check:libs": "pnpm -F \"./libs/**\" -F \"./plugins/**\" build-check",
    "build:play": "pnpm -F @v-md/playground build",
    "build:doc": "pnpm -F @v-md/doc build",
    "build:libs": "pnpm -F \"./libs/**\" -F \"./plugins/**\" build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage.enabled",
    "test:preview": "vite preview --outDir vitest-output/html",
    "release": "pnpm build:libs && changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.11",
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@stylistic/stylelint-config": "^2.0.0",
    "@types/markdown-it": "catalog:",
    "@types/markdown-it-container": "catalog:",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "glob": "^11.0.1",
    "jsdom": "^26.0.0",
    "markdown-it": "catalog:",
    "markdown-it-container": "catalog:",
    "read-pkg": "^9.0.1",
    "sass": "catalog:",
    "simple-git": "^3.27.0",
    "stylelint": "^16.12.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tsx": "^4.19.2",
    "vite": "^5.4.14",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitepress": "^1.6.3",
    "vitepress-sidebar": "^1.31.1",
    "vitest": "^3.0.9",
    "vue-tsc": "^2.2.0",
    "zx": "^8.3.0"
  }
}
